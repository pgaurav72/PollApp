<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/poll_list_card_view"
    android:layout_width="match_parent"
    android:layout_height="185dp"
    app:cardBackgroundColor="#EEEEEE"
    android:layout_marginTop="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="#fff"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#81D4FA"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:elevation="12dp"
                        android:layout_marginTop="3dp"
                        android:id="@+id/view2"
                        app:cardCornerRadius="40dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9">

                    <ImageView
                        android:id="@+id/poll_profile_pic"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />
                    </android.support.v7.widget.CardView>


                    <TextView
                        android:id="@+id/poll_user_name"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:text="Username"/>

                    <TextView
                        android:id="@+id/total_votes_count"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="35dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="#fff"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/poll"
                        android:layout_marginStart="10dp" />
                    <TextView
                        android:id="@+id/poll_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Name of poll"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp"
                        android:textColor="#000000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="#fff"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/poll_question"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Poll question"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:layout_marginStart="15dp"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#000000"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

